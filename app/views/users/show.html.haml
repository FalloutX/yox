=provide(:title, @user.name)
.row
  %aside{class: "span4"}
    %section

      %h1
        = gravatar_for @user, size: 200
        = @user.name
  .span8
    -if @user.microposts.any?
      %h3 Microposts(#{@user.microposts.count})
      %ol.microposts
        = render @microposts
      = will_paginate @microposts